{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{TraceId}] [{RequestMethod} {RequestPath}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-prod.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{TraceId}] [{RequestMethod} {RequestPath}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithProcessId",
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "FmcsDbSettings": {
    "Host": "",
    "Port": "",
    "Database": "",
    "Username": "",
    "Password": ""
  },
  "OpenApiInfo": {
    "Title": "Finance Manager Catalog Service API",
    "Version": "v1",
    "Description": "API для обработки запросов на получение информации о сущностях каталогов через REST",
    "Contact": {
      "Name": "Команда DotNetRunners",
      "Url": "https://github.com/proninp/FinanceManager"
    }
  },
  "AllowedHosts": "*"
}
